  <form id="form-reg" action="/admin/register" method="POST">
    <div class="form-group">
      <p id="labelNamel" >Full Name</label>
      <input type="text" name="nameN" value="<%= typeof text != 'undefined' ? email : '' %>"
      class="form-control" id="exampleInputName1" aria-describedby="NamelHelp" placeholder="Enter full name">
    </div>
    <div class="form-group">
      <p id="labelUsername" >Username</label>
      <input type="text" name="usernameN" value="<%= typeof text != 'undefined' ? email : '' %>"
      class="form-control" id="exampleInputUsername1" aria-describedby="UsernameHelp" placeholder="Enter username">
    </div>
    <div class="form-group">
      <p id="labelEmail" >Email address</label>
      <input type="email" name="emailN" value="<%= typeof email != 'undefined' ? email : '' %>"
      class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
      <p id="labelPassword">Password</label>
      <input type="password" name="passwordN" value="<%= typeof password != 'undefined' ? password : '' %>"
      class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

  <div class="login-link">
    <p>Have an account? <a href="/admin/login">Login</a></p>
  </div>

