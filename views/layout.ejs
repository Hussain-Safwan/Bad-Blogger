<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="layout_style.css">

  <title>Node Blog</title>
</head>

<body>

  <!-- NavBar -->
  <div class="topnav">
    <div class="navlinks">
      <div class="home">
        <p>Home</p>
      </div>
      <div class="create-post">
        <p id="create-btn" data-toggle="modal" data-target="#exampleModalCenter">Create Post</p>
      </div>
      <div class="notifs">
        <p>Notifications</p>
      </div>
      <div class="notifs">
        <p>Profile</p>
      </div>
      <div class="search" id="id-search">
        <p>Search</p>
      </div>
    </div>

  </div>

  <div class="search-bar myCustomSearch" id="id-search-bar">
    <div class="input-group mb-3">
      <input type="text" class="form-control" placeholder="badBlogger.." aria-label="Recipient's username"
        aria-describedby="basic-addon2">
      <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button">Search</button>
      </div>
    </div>
  </div>
  <!-- ------ -->
  <div class="container"><%- body %></div>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
    crossorigin="anonymous"></script>

  <style>
    @import url('https://fonts.googleapis.com/css?family=PT+Sans+Narrow&display=swap');
    @import url('https://fonts.googleapis.com/css?family=ABeeZee&display=swap');

    .topnav {}

    .topnav {
      top: 0;
      background-color: white;
      position: sticky;
      border-bottom: 1px solid rgb(230, 229, 229);
    }

    .navlinks {
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
    }

    .navlinks .home {
      border-bottom: 3px solid rgb(20, 157, 161);
    }

    .navlinks .create-post {
      height: 100%;
      margin-left: 60px;
    }

    .navlinks .notifs {
      margin-left: 60px;
      text-align: center;
    }

    .navlinks .search {
      margin-left: 60px;
      text-align: center;
      display: flex;
    }

    .navlinks input {
      width: 100%;
    }

    .search-bar {
      display: none;
      width: 30%;
      margin: auto;
      margin-top: 10px;
    }

    .navlinks p {
      padding-top: 20px;
      font-size: 18px;
      font-family: 'ABeeZee', sans-serif;
    }

    .navlinks .create-post:hover,
    .notifs:hover,
    .home:hover,
    #id-search:hover {
      border-bottom: 3px solid rgb(20, 157, 161);
      color: rgb(20, 157, 161);
    }

    /* .myCustomSearch {
      position: fixed;
      left: 50%;
      transform: translateX(-50%);
    } */
  </style>

  <script>
    $(document).ready(() => {
      var vis = false;
      $('#id-search').click(() => {
        if (vis == false) {
          console.log('close');
          document.getElementById('id-search-bar').style.display = 'flex';
          vis = true;
        }
        else {
          console.log('open');
          document.getElementById('id-search-bar').style.display = 'none';
          vis = false;
        }
      })
    });
  </script>

</body>

</html>