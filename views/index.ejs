
<% posts.forEach(function(posts){ %>
<section class="allPost">
  <div class="eachPost">
    <div class="firstRow-group">
      <div class="author-img">
        <% let today = Date.now()%>
        <img class="img" src="https://robohash.org/<%=posts._id%>">
      </div>
      <div class="other-than-img" style="width: 100%">
        <div class="firstRow">
          <div class="right-side">
            <div class="title">
              <p> <%= posts.title %> </p>
            </div>
          </div>
          <div class="twoButton">
            <a href="/users/<%= posts._id %>" name="view-post" id="<%= posts._id %>" class="badge badge-info">View Post</a>
          </div>
        </div>
        <div class="dateRow">
          <p><%= posts.date %></p>
        </div>
        <div class="iconRow">
          <i title="Contains multilayered texts" class="fas fa-align-left"></i>
          <i title="Contains code segments" id="code" class="fas fa-code"></i>
          <i class="fas fa-file-contract"></i>
        </div>
      </div>
    </div>
    <div class="secondRow">
      <p><%= posts.body %></p>
    </div>
    <hr>
    <div class="thirdRow">
      <div class="views">
        <p>Views <%= posts.view %></p>
      </div>
      <div class="upvotes">
        <p>· Upvotes <%= posts.upvote %></p>
      </div>
      <div class="comments">
        <p>· Comments <%= posts.comment %></p>
      </div>
    </div>
  </div>
</section>
<% }) %>

